    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"
        android:layout_marginTop="5dp"
        android:src="@drawable/dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/fName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imAvatar"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:layout_marginTop="25dp"
        android:textColorHint="?colorAccent">
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Change Name"
            android:inputType="textPersonName|textCapWords"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent" />
    </android.support.design.widget.TextInputLayout>
