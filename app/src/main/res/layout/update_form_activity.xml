<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfUpdate">
<com.flexfare.flextools.Prof_Form
    android:id="@+id/form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    app:showErrorOn="unfocus"
    app:submitButton="@+id/submit_btn">

    <com.flexfare.android.fonts.Asap
        android:id="@+id/prof_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/my_profile"
        android:textAllCaps="true"
        android:textColor="?colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_below="@id/prof_det"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/up_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fName"
        android:layout_alignRight="@+id/fName"
        android:layout_alignTop="@+id/profile_image"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="79dp"
        app:srcCompat="@drawable/check" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:layout_marginTop="25dp"
        android:textColorHint="?colorPrimary">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"
            android:inputType="textPersonName|textCapWords"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fName"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            android:inputType="textPersonName|textCapWords"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastName"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:hint="@string/phone_no"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driver_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_input"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary">

        <Spinner
            android:id="@+id/dTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/driver_type"
            android:hint="@string/idrive"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent"
            app:spinnerHint="Select your category"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/car_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver_type"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary">

        <AutoCompleteTextView
            android:id="@+id/cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_type"
            android:hint="@string/car_type"
            android:inputType="textCapWords|textAutoComplete"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/car_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_type"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reg_no"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_plate"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary">
    <Spinner
        android:id="@+id/routes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_plate"
        android:textColor="@color/black"
        android:textColorHint="?colorAccent"
        app:spinnerHint="Select your route"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driver_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/states"
        android:layout_marginEnd="@dimen/right_end"
        android:layout_marginLeft="@dimen/left_start"
        android:layout_marginRight="@dimen/right_end"
        android:layout_marginStart="@dimen/left_start"
        android:textColorHint="?colorPrimary"
        app:counterEnabled="true"
        app:counterMaxLength="140">
        <EditText
            android:id="@+id/dri_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_plate"
            android:hint="@string/description"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="140"
            android:textColor="@color/black"
            android:textColorHint="?colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver_descr"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="@dimen/btn_end"
        android:layout_marginLeft="@dimen/btn_start"
        android:layout_marginRight="@dimen/btn_end"
        android:layout_marginStart="@dimen/btn_start"
        android:background="@drawable/round_btn"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="28sp" />
</com.flexfare.flextools.Prof_Form>
    </RelativeLayout>
</ScrollView>